---
import { getTranslations } from "@/i18n";

import AccordionList from "../AccordionList";

interface Props {
  lang: string;
}

const { lang } = Astro.props as Props;
const t = getTranslations(lang);
const {
  contact: { faqs },
} = t;
---

<section class="flex flex-col md:grid grid-cols-5 w-full mt-2 md:mt-6 px-6 md:px-12 mb-4">
  <div class="flex flex-col col-span-2 space-y-1">
    <span class="text-primary text-lg">âœ¦ {faqs.title}</span>
    <span class="text-4xl font-semibold">{faqs.subtitle}</span>
  </div>
  <div class="col-span-3 mt-4 md:mt-0">
    <AccordionList client:only="react" items={faqs.questions} />
  </div>
</section>
