---
import { getTranslations } from "@/i18n";

import AccordionList from "../AccordionList";

interface Props {
  lang: string;
}

const { lang } = Astro.props as Props;
const t = getTranslations(lang);
const {
  contact: { faqs },
} = t;
---

<section class="grid grid-cols-5 px-12 w-full mt-10 mb-12">
