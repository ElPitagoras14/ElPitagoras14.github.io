---
import { getTranslations } from "@/i18n";

import ContactForm from "./ContactForm";
import ContactCard from "./ContactCard.astro";

interface Props {
  lang: string;
}

const { lang } = Astro.props as Props;
const t = getTranslations(lang);
const {
  contact: { connect },
} = t;
---

<section class="w-full mt-12 md:mt-20 px-6 md:px-12">
  <div class="flex flex-col space-y-1 md:w-[40%]">
    <span class="text-primary text-base md:text-lg">âœ¦ {connect.title}</span>
    <span class="text-2xl md:text-4xl font-semibold">{connect.subtitle}</span>
  </div>
  <div class="flex flex-col md:grid grid-cols-2 gap-x-8 mt-5 md:mt-10 space-y-6 md:space-y-0">
    <div>
      <ContactForm lang={lang} client:load/>
    </div>
    <div>
      <ContactCard lang={lang}/>
    </div>
  </div>
</section>
