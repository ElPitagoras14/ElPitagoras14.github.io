---
import { getTranslations } from "@/i18n";

interface Props {
  lang: string;
}

const { lang } = Astro.props as Props;
const t = getTranslations(lang);
const { footer } = t;
---

<footer class="flex justify-between mt-6 w-[85%] px-20 mx-auto mb-10">
  <span class="text-sm">{footer}</span>
  <div class="flex space-x-4">
    <a
      class="hover:text-primary"
      href="https://github.com/ElPitagoras14"
      target="_blank"
      aria-label="GitHub Profile"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github mx-auto"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
        ></path></svg
      >
    </a>
    <a
      class="hover:text-primary"
      href="https://www.linkedin.com/in/jonathan-garcia-elpi/"
      target="_blank"
      aria-label="LinkedIn Profile"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-brand-linkedin"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M8 11v5"></path><path d="M8 8v.01"></path><path d="M12 16v-5"
        ></path><path d="M16 16v-3a2 2 0 1 0 -4 0"></path><path
          d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z"
        ></path></svg
      >
    </a>
    <a
      class="hover:text-primary"
      href="https://leetcode.com/u/ElPitagoras14/"
      target="_blank"
      aria-label="LeetCode Profile"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-brand-leetcode"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M12 13h7.5"></path><path d="M9.424 7.268l4.999 -4.999"></path><path
          d="M16.633 16.644l-2.402 2.415a3.189 3.189 0 0 1 -4.524 0l-3.77 -3.787a3.223 3.223 0 0 1 0 -4.544l3.77 -3.787a3.189 3.189 0 0 1 4.524 0l2.302 2.313"
        ></path></svg
      >
    </a>
  </div>
</footer>
