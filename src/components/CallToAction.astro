---
import { getTranslations } from "@/i18n";
import { Button } from "./ui/button";

interface Props {
  lang: string;
}

const { lang } = Astro.props as Props;
const t = getTranslations(lang);
const { callToAction } = t;
---

<section
  class="flex flex-col justify-center items-center mt-6 md:mt-12 mx-6 md:w-full md:mx-0 px-6 md:px-12 py-8 md:py-12 space-y-2 md:space-y-4 rounded-4xl bg-secondary/40 text-center"
>
  <span class="text-4xl md:text-6xl font-semibold">{callToAction.title}</span>
  <span class="text-sm md:text-base">{callToAction.description}</span>
  <Button className="p-5 md:p-7 mt-5 md:mt-10 hover:cursor-pointer rounded-4xl">
    <a href={`/${lang}/contact`}>
      <span class="text-lg md:text-2xl">{callToAction.button}</span>
    </a></Button
  >
</section>
