---
import { getTranslations } from "@/i18n";

import Recognitions from "./Recognitions.astro";

interface Props {
  lang: string;
}

const { lang } = Astro.props as Props;
const t = getTranslations(lang);
const {
  about: { awards },
} = t;
---

<section class="flex flex-col md:grid grid-cols-5 mt-2 md:mt-6 px-6 md:px-12 w-full">
  <div class="flex flex-col col-span-2 space-y-1">
    <span class="text-primary text-base md:text-lg">âœ¦ {awards.title}</span>
    <span class="text-2xl md:text-4xl font-semibold">{awards.subtitle}</span>
  </div>
  <div class="col-span-3">
    <Recognitions recognitions={awards.awards} />
  </div>
</section>
