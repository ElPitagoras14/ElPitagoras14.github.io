---
import { getTranslations } from "@/i18n";
import { Icon } from "astro-icon/components";
import { iconsMap, imageChange } from "@/lib/icon";

import { Badge } from "@/components/ui/badge";
import { Separator } from "@/components/ui/separator";
import React from "react";

interface Props {
  lang: string;
}

const { lang } = Astro.props as Props;
const t = getTranslations(lang);
const {
  about: { skills },
} = t;
---

<section
  class="w-full mt-2 md:mt-6 px-6 md:px-12 flex flex-col space-y-4 md:space-y-8"
>
  <div class="flex flex-col space-y-1">
    <span class="text-primary text-base md:text-lg">âœ¦ {skills.title}</span>
    <span class="text-2xl md:text-4xl font-semibold">{skills.subtitle}</span>
  </div>
  <div
    class="flex flex-col md:grid grid-cols-12 items-center space-y-2 md:gap-y-4"
  >
    {
      skills.categories.map((category) => (
        <React.Fragment>
          <span class="text-2xl md:text-3xl text-wrap pb-2 md:pb-0 md:mb-0 text-center md:text-right font-medium col-span-3 text-foreground/60 border-b-2 md:border-b-0 w-full">
            {category.title}
          </span>
          <div class="hidden h-full w-full md:flex items-center justify-center">
            <Separator orientation="vertical" className="py-8" />
          </div>
          <div class="col-span-8 flex flex-wrap justify-center md:justify-start space-x-1 md:space-x-2 gap-y-1 md:gap-y-2 mt-2 md:mt-0">
            {category.skills.map((skill) => {
              const { icon, name, isDefault } = iconsMap[skill];
              const iconName = isDefault ? "default" : icon;

              return (
                <Badge
                  variant="secondary"
                  className="px-2 md:px-3 py-1 md:py-2 flex items-center"
                >
                  <span class="mr-1">
                    {imageChange.includes(icon) ? (
                      <img
                        src={`/techs/${icon}.svg`}
                        alt={name}
                        class="w-5 md:w-6 h-5 md:h-6"
                        loading="lazy"
                      />
                    ) : (
                      <Icon
                        name={`techs/${iconName}`}
                        class="w-5 md:w-6 h-5 md:h-6"
                      />
                    )}
                  </span>
                  <span class="text-base">{name}</span>
                </Badge>
              );
            })}
          </div>
        </React.Fragment>
      ))
    }
  </div>
</section>
