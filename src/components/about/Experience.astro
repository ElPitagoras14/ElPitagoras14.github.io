---
import { getTranslations } from "@/i18n";

import Jobs from "./Jobs";

interface Props {
  lang: string;
}

const { lang } = Astro.props as Props;
const t = getTranslations(lang);
const {
  about: { experience },
} = t;
---

<section class="w-full mt-2 md:mt-6 px-6 md:px-12 flex flex-col md:grid grid-cols-5 md:gap-x-10">
  <div class="col-span-2 relative space-y-1">
    <div class="flex flex-col space-y-1">
      <span class="text-primary text-base md:text-lg">âœ¦ {experience.title}</span>
        <span class="text-2xl md:text-4xl font-semibold">{experience.subtitle}</span>
        <span class="text-sm md:text-base text-foreground/50">{experience.description}</span>
    </div>
  </div>
  <div class="col-span-3 flex flex-col space-y-8">
    <Jobs jobs={experience.jobs} client:load />
  </div>
</section>
