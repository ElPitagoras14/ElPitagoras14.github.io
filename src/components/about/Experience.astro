---
import { getTranslations } from "@/i18n";

import Jobs from "./Jobs";

interface Props {
  lang: string;
}

const { lang } = Astro.props as Props;
const t = getTranslations(lang);
const {
  about: { experience },
} = t;
---

<section class="w-full px-12 grid grid-cols-5 gap-x-10 mt-6">
  <div class="col-span-2 relative space-y-1">
    <div class="flex flex-col space-y-1">
      <span class="text-primary text-lg">âœ¦ {experience.title}</span>
      <span class="text-4xl font-semibold">{experience.subtitle}</span>
      <span class="text-foreground/50">{experience.description}</span>
    </div>
  </div>
  <div class="col-span-3 flex flex-col space-y-8">
    <Jobs jobs={experience.jobs} client:load />
  </div>
</section>
