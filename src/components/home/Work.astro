---
import { getTranslations } from "@/i18n";

import ProjectGallery from "../ProjectGallery.astro";

interface Props {
  lang: string;
}

const { lang } = Astro.props as Props;
const t = getTranslations(lang);
const {
  home: { work },
} = t;
---

<section class="w-full px-6 md:px-12 mt-1 md:mt-6">
  <div class="flex flex-col space-y-1">
    <span class="text-primary text-base md:text-lg">âœ¦ {work.title}</span>
        <span class="text-2xl md:text-4xl font-semibold">{work.subtitle}</span>
        <span class="text-sm md:text-base text-foreground/50">{work.description}</span>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-6 md:gap-y-10 mt-5 md:mt-10">
    {
      work.projects.map((projectId) => (
        <ProjectGallery projectId={projectId} lang={lang} loading="lazy" />
      ))
    }
  </div>
</section>
