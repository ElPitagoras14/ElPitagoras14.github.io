---
import { getTranslations } from "@/i18n";
import { InteractiveHoverButton } from "../magicui/interactive-hover-button";

interface Props {
  lang: string;
}

const { lang } = Astro.props as Props;
const t = getTranslations(lang);
const {
  home: { hero },
} = t;
---

<section
  class="flex flex-col md:grid grid-cols-3 mt-12 md:mt-20 px-6 md:px-12 gap-x-4 md:gap-x-12 w-full"
>
  <div class="flex gap-x-4 md:gap-x-12">
    <div class="flex flex-col space-y-1 text-wrap">
      <span class="text-lg md:text-xl text-foreground/60">
        {hero.greetings}
      </span>
      <span class="text-4xl md:text-6xl font-semibold">{hero.role}</span>
      <span class="text-base md:text-lg mt-4 text-foreground/60"
        >{hero.subroles}</span
      >
    </div>
    <div class="md:hidden flex flex-col justify-center items-center">
      <div class="flex flex-wrap space-y-4 justify-center max-w-[8rem]">
        <a
          class="border bg-background shadow-xs hover:bg-accent hover:text-accent-foreground h-12 w-12 flex flex-col items-center justify-center rounded-md text-foreground hover:cursor-pointer"
          href="https://github.com/ElPitagoras14"
          target="_blank"
          aria-label="GitHub Profile"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github mx-auto"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
            ></path></svg
          >
        </a>
        <a
          class="border bg-background shadow-xs hover:bg-accent hover:text-accent-foreground h-12 w-12 flex flex-col items-center justify-center rounded-md text-foreground hover:cursor-pointer"
          href="https://www.linkedin.com/in/jonathan-garcia-elpi/"
          target="_blank"
          aria-label="LinkedIn Profile"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-brand-linkedin"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M8 11v5"></path><path d="M8 8v.01"></path><path d="M12 16v-5"
            ></path><path d="M16 16v-3a2 2 0 1 0 -4 0"></path><path
              d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z"
            ></path></svg
