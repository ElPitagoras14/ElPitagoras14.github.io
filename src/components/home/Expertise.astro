---
import { getTranslations } from "@/i18n";
import AccordionList from "../AccordionList";
import { FlickeringGrid } from "@/components/magicui/flickering-grid";

interface Props {
  lang: string;
}

const { lang } = Astro.props as Props;
const t = getTranslations(lang);
const {
  home: { expertise },
} = t;
---

<section class="mt-2 md:mt-8 px-6 md:px-12 w-full">
  <div class="flex md:grid grid-cols-5 w-full gap-x-16 align-middle items-center">
    <div class="flex flex-col space-y-2 col-span-2 py-2 w-full">
      <div class="flex flex-col space-y-1">
        <span class="text-primary text-base md:text-lg">âœ¦ {expertise.title}</span>
        <span class="text-2xl md:text-4xl font-semibold">{expertise.subtitle}</span>
        <span class="text-sm md:text-base text-foreground/50">{expertise.description}</span>
      </div>
      <AccordionList client:only="react" items={expertise.areas} />
    </div>
    <div class="col-span-3 hidden md:flex flex-col items-center justify-center">
      <FlickeringGrid
        client:load
        squareSize={6}
        gridGap={4}
        color="#60A5FA"
        maxOpacity={0.7}
        flickerChance={0.1}
        height={300}
      />
    </div>
  </div>
</section>
