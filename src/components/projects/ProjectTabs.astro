---
import { getTranslations } from "@/i18n";
import ProjectGallery from "../ProjectGallery.astro";
import ProjectList from "./ProjectList.astro";

const { lang } = Astro.props;
const t = getTranslations(lang);
const projectsIds = t.projects.projects;
---

<div x-data="{ tab: 'gallery' }" class="w-full space-y-6">
  <div
    class="inline-flex w-96 items-center justify-center rounded-md bg-muted p-1 text-muted-foreground shadow-inner"
  >
    <button
      @click="tab = 'gallery'"
      :class="tab === 'gallery' ? 'bg-background text-foreground shadow-sm' : 'cursor-pointer'"
      class="inline-flex w-full items-center justify-center whitespace-nowrap rounded-sm px-4 py-2 text-md font-medium transition-all hover:text-foreground focus:outline-none disabled:pointer-events-none disabled:opacity-50"
    >
      {t.projects.gallery}
    </button>
    <button
      @click="tab = 'list'"
      :class="tab === 'list' ? 'bg-background text-foreground shadow-sm' : 'cursor-pointer'"
      class="inline-flex w-full items-center justify-center whitespace-nowrap rounded-sm px-4 py-2 text-md font-medium transition-all hover:text-foreground focus:outline-none disabled:pointer-events-none disabled:opacity-50"
    >
      {t.projects.list}
    </button>
  </div>

  <div x-show="tab === 'gallery'" x-transition>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
      {
        projectsIds.map((projectId) => (
          <ProjectGallery projectId={projectId} lang={lang} loading="lazy" />
        ))
      }
    </div>
  </div>

  <div x-show="tab === 'list'" x-transition class="mt-6">
    <ProjectList projectIds={projectsIds} lang={lang} />
  </div>
</div>
